<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input-group">
    <% f.label :email %><br />
    <%= f.email_field :email, placeholder:"E-mail", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="input-group">
    <% f.label :password %><br />
    <%= f.password_field :password, placeholder:"Password", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="input-group">
      <%= f.check_box :remember_me, {:checked => "checked"} %> 
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-secondary" %>
  </div>
<% end %>

</br>

<%= render "devise/shared/links" %>
