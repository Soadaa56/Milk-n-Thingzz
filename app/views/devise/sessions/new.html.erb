<div class="indent devise">
  <h2>Log in</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.text_field :login, placeholder:"Username", autofocus: true, autocomplete: "username" %>
    </div>
    </br>
  
    <div class="field">
      <%= f.password_field :password, placeholder:"Password", autocomplete: "current-password" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, {:checked => "checked"} %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    </br>
  
    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-custom" %>
    </div>
  <% end %>
  
  </br>
  
  <%= render "devise/shared/links" %>
</div>
