<h1><%= @craft.name %></h1>
</br>
<h4 class='center'><%= @craft.category %></h4>

<%= image_tag(@craftimage.image_path, class: 'center-img max-craft-image-size') %>

<div class="container comment-container">
  <%= render 'comments/form', craft: @craft, comment: @craft.comments.build %>
  <% @comments.each do |comment| %>
    <%= render 'comments/comment', craft: @craft, comment: comment%>
  <% end %>
</div>

<%= link_to "Back", :back, class:"btn btn-custom indent" %>
<% if current_user.admin? %>
  <%= link_to "All Crafts - Admin", crafts_path, class:"btn btn-primary"%>
<% end %>