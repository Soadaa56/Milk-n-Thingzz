<% if current_user.admin? %>
  <h1>Edit Craft</h1>
  <div class="center">
    <%= link_to 'All Crafts', crafts_path, class:"btn btn-dark" %>
  </div>
  
  <%= form_with(model: @craft) do |f| %>
    <div class="indent large-text edit-craft-form">
      <div>
        ID: <%= @craft.id %>
      </div>
      <div>
        <%= f.label :name, style: "display: block" %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label :category, style: "display: block" %>
         <%= f.select :category, ["3D-Print", "Crotchet", "Embroidery", "Miscellaneous"]%>
      </div>
      <div>
        <%= f.label :image, style: "display: block" %>
        <%= f.file_field :image %>
      </div>
      <div>
        <%= f.submit 'Update Craft', class: "btn btn-primary"%>
      </div>
    </div>

    <%= @craft.inspect %>
  <% end %>
    <%= button_to 'Destroy Craft', craft_path(@craft), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    <br><br>
    
<% else %>
  <p>You seem to be lost!</p>
<% end %>
<%= link_to 'Back', :back, class:'btn btn-custom indent' %>

