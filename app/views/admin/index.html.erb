<h1>Admin Dashboard</h1>

<div class="container">
  <% @users.each do |user| %>
    <div>
      User <%= user.id %>: <%= link_to user.username, user_path(user.id) %>
      <div class="indent">
        Email: <%= user.email %> |
        Role: <%= user.role %> |
        Total Comments: <%= user.comments.count %>
      </div>
    <div>
  <% end %>
</div>
