<div class="center profile-title">Hello, <%= current_user.username %></div>

<%= link_to 'Edit Profile', edit_user_registration_path, class:"fs-3 nav-link center underline" %>

<p class="center fs-2">Number of comments: <%= @comments.all.count %></p>
<% @userComment.each do |comment| %>
  <%= render 'profile/comment', user: @user, comment: comment, craft:@craft %>
<% end %>